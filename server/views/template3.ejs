    .eighty-five-percent {
      height: inherit;
      width: 85%;
    }

    .eighty-percent {
      height: inherit;
      width: 80%;
    }

    .fifty-percent {
      height: inherit;
      width: 50%;
    }

    .twenty-percent {
      height: inherit;
      width: 20%;
