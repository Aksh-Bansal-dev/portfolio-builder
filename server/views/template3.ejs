    <header id="body-header">
      <nav>
        <ul class="horizontal-list text-center nav-menu">
          <li>
            <a href="#" style="text-decoration: none"> Home </a>
          </li>
          <li>
            <a href="#about"> About </a>
          </li>
          <li>
            <a href="#project">Projects</a>
          </li>
          <li>
            <a href="#education">Education</a>
          </li>
          <li>
            <a href="#info">Info</a>
          </li>
          <li>
            <a href="#contact">Contact</a>
          </li>
        </ul>
      </nav>

      <div id="name-social-container">
        <div class="text-center">
          <h1 id="my-name">Kirito</h1>
        </div>
      </div>
    </header>
    <mpin>
      <section id="about">
        <div id="my-image">
          <img src="http://localhost:5000<%= profile_image %>" />
        </div>
        <div id="about-para"></div>
      </section>

      <section id="project">
        <h1 class="section-heading mb75px">
          <span>
            <i class="fas fa-briefcase"></i>
          </span>
          <span> Projects </span>
        </h1>

        <div class="timeline" id="project_section">
          <div id="timeline-divider">
            <div class="timeline-traveller"></div>
          </div>
        </div>
      </section>

      <section id="education">
        <h1 class="section-heading mb75px">
          <span>
            <div class="m-black">
              <i class="fas fa-graduation-cap"></i>
            </div>
          </span>
          <span> <div class="m-black">Education</div> </span>
        </h1>
        <div class="timeline" id="education_section">
          <div id="timeline-divider1">
            <div class="timeline-traveller1"></div>
          </div>
        </div>
      </section>

      <section id="info">
        <h1 class="section-heading mb75px">
          <span>
            <i class="fas fa-briefcase"></i>
          </span>
          <span> Info </span>
        </h1>

        <div class="timeline" id="info_section">
          <div id="timeline-divider2">
            <div class="timeline-traveller2"></div>
          </div>
        </div>
      </section>

      <section id="contact">
        <h1 class="section-heading mb50px">
          <span>
            <i class="far fa-address-card"></i>
          </span>
          <span> Contact </span>
        </h1>

        <div class="text-center social-icons">
          <ul class="horizontal-list">
            <li>
              <a target="blank" id="linked_link" href="<%= linkedin_profile %>">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </li>

            <li>
              <a
                target="blank"
                id="codechef_link"
                href="<%= codechef_profile %>"
              >
                <i class="fas fa-chess-queen"></i>
              </a>
            </li>
            <li>
              <a
                target="blank"
                id="codeforces_link"
                href="<%= codeforces_profile %>"
              >
                <i class="fas fa-align-right"></i>
              </a>
            </li>

            <li>
              <a target="blank" id="github_link" href="<%= github_profile %>">
                <i class="fab fa-github"></i>
              </a>
            </li>
          </ul>
        </div>
      </section>
    </mpin>

    <!-- Take Dynamic Inputs -->
    <script>
      document.querySelector(".fa-align-right").style.transform =
        "rotate(90deg)";

      // Projects
      let project_title = [];
      let project_desc = [];
      let project_date = [];

      let useless = `
    <% Object.keys(projects).forEach(function(prop) { %>
      `;
      project_title.push("<%- projects[prop].title %>");
      project_desc.push(`<%- projects[prop].description %>`);
      project_date.push("<%- projects[prop].date %>");
      useless = `
    <% }); %>
    `;

      let timeline = document.getElementById("project_section");
      if (project_title.length == 0) {
        let project_section = document.getElementById("project");
        project_section.style.display = "none";
      }
      for (let i = 0; i < project_title.length; i++) {
        timeline.innerHTML += `<div data-aos="zoom-in" class="timeline-box aos-init">
        <div class="timeline-container">
          <h3 class="experience-designation m0 m-yellow">${project_title[i]}</h3>
          <h5 class="experience-duration m0">${project_date[i]}</h5>
          <p class="experience-description text-align-justify m-silver">
            ${project_desc[i]}
          </p>
        </div>
      </div>`;
      }

      // Education
      education_degree = [];
      education_year = [];
      education_title = [];
      education_score = [];

      useless = `
    <% Object.keys(education).forEach(function(prop) { %>
      `;
      education_title.push("<%- education[prop].title %>");
      education_degree.push("<%- education[prop].degree %>");
      education_year.push("<%- education[prop].graduation_year %>");
      education_score.push("<%- education[prop].score %>");
      useless = `
    <% }); %>
    `;

      if (education_title.length == 0) {
        let education_section = document.getElementById("education");
        education_section.style.display = "none";
      }
      let education = document.getElementById("education_section");
      for (let i = 0; i < education_title.length; i++) {
        education.innerHTML += `<div data-aos="zoom-in" class="timeline-box aos-init">
        <div class="timeline-container">
          <h3 class="experience-designation m0 m-black">${education_degree[i]}</h3>
          <h4 class="experience-company-name m-darkgray">${education_title[i]}</h4>
          <h5 class="experience-duration m0 m-gray">${education_year[i]}</h5>
          <h5 class="experience-duration m0 m-gray">${education_score[i]}</h5>
        </div>
      </div>`;
      }

      // info

      info_title = [];
      info_desc = [];
      info_year = [];
      info_type = [];

      useless = `
    <% Object.keys(info).forEach(function(prop) { %>
      `;
      info_title.push("<%- info[prop].title %>");
      info_desc.push(`<%- info[prop].description %>`);
      info_year.push("<%- info[prop].year %>");
      info_type.push("<%- info[prop].infoType %>");
      useless = `
    <% }); %>
    `;

      if (info_title.length == 0) {
        let info_section = document.getElementById("info");
        info_section.style.display = "none";
      }
      let info = document.getElementById("info_section");
      for (let i = 0; i < info_title.length; i++) {
        info.innerHTML += `<div data-aos="zoom-in" class="timeline-box aos-init">
        <div class="timeline-container">
          <h3 class="experience-designation m0 m-yellow">${info_title[i]}</h3>
          <h4 class="experience-company-name">${info_type[i]}</h4>
          <h5 class="experience-duration m-yellow">${info_year[i]}</h5>
          <p class="experience-description text-align-justify m-silver">
            ${info_desc[i]}
          </p>
        </div>
      </div>`;
      }

      let about = `<%= about %>`;

      document.getElementById("about-para").innerText = about;

      let Name = "<%= username %>";
      document.getElementById("my-name").innerText = Name;
    </script>
  </body>
