  <style>
    body {
      margin: 0px;
      font-family: sans-serif;
      font-size: 30px;
      background-color: #ffc13b;
    }

    #body-header {
      height: 65vh;
      background-size: cover;
      background-position: center;
      padding-top: 1.2rem;
      background-image: url(https://wallpaperaccess.com/full/1720179.jpg);
      background-attachment: fixed;
    }

    a:hover {
      text-decoration: none !important;
    }

    .horizontal-list {
      list-style: none;
      padding-left: 0px;
      margin: 0px;
    }

    .horizontal-list li {
      display: inline-block;
      margin: 0px 8px 8px 0px;
      font-weight: 100;
      font-size: 0.9rem;
    }

    .horizontal-list li a {
      color: white;
      text-decoration: none;
    }

    .nav-menu li a {
      transition: color 0.5s, border-bottom 4s;
      text-decoration: none !important;
    }

    .nav-menu li a:hover {
      color: lightgrey;
      border-bottom: 1px solid black;
      text-decoration: none !important;
    }

    .text-center {
      text-align: center;
    }

    #name-social-container {
      margin-top: 20vh;
    }

    #my-name {
      font-size: 3rem;
      letter-spacing: 0.1rem;
      color: white;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .social-icons li a i {
      padding: 10px;
      font-size: 1rem;
      border-radius: 50%;
    }

    .social-icons li a i:hover {
      box-shadow: 0px 0px 6px 4px rgba(230, 196, 196, 0.3);
    }

    section {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-bottom: 20px;
    }

    section:nth-child(2n) {
      background-color: #0a0802;
    }

    section:nth-child(2n + 1) {
      background-color: #ffc13b;
    }

    .section-heading {
      width: auto;
      padding: 20px 10px 10px;
      font-weight: 400;
    }

    .section-heading span {
      font-size: 40px;
      color: #ffc13b;
      display: inline-block;
      padding-top: 10px;
      margin-right: 0.5rem;
    }

    #about {
      height: auto;
      width: 100%;
      position: relative;
      margin-bottom: 30px;
    }

    #my-image {
      height: 12rem;
      width: 12rem;
      margin: auto;
      margin-top: -12vh;
    }

    #my-image img {
      height: 100%;
      width: 100%;
      border-radius: 50%;
      border: 3px solid white;
      box-shadow: 1px 1px 10px 2px lightgrey;
    }

    #about-para {
      padding: 10px;
      width: 70%;
      text-align: justify;
      color: black;
      line-height: 28px;
      font-size: 1.1rem;
      margin: auto;
    }

    .skills-display {
      width: 75%;
      padding: 10px;
      margin-bottom: 30px;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-evenly;
    }

    .skill-progress {
      width: 11rem;
      height: 2.2rem;
      background-color: lightgrey;
      border-radius: 1rem;
      box-shadow: 1px 1px 2px 1px #b9b9b9 inset;
      margin: 25px;
      overflow: hidden;
    }

    .skill-progress > div {
      border-radius: 20px 0px 0px 20px;
      box-shadow: 1px 1px 5px 2px #989882;
    }

    .skill-name span {
      color: white;
      font-size: 1rem;
      margin-left: 10px;
      vertical-align: middle;
    }

    .timeline {
      position: relative;
      width: 75%;
    }

    .timeline-box {
      padding: 5px;
      width: 40%;
      min-height: 150px;
      position: relative;
      left: 5%;
      text-align: right;
    }

    .timeline-box::after {
      content: "";
      position: absolute;
      width: 15px;
      height: 15px;
      background-color: lightgrey;
      top: 25%;
      border-radius: 50%;
      z-index: 1;
    }

    .timeline-box:nth-child(2n) {
      left: 53%;
    }

    .timeline-box:nth-child(2n + 1)::after {
      right: -11.8%;
    }

    .timeline-box:nth-child(2n)::after {
      left: -9%;
    }

    .timeline-container {
      padding: 8px;
    }
    .timeline > div:nth-child(odd) {
      text-align: right;
    }
    .timeline > div:nth-child(even) {
      text-align: left;
    }

    #timeline-divider {
      position: absolute;
      width: 0;
      top: 4%;
      left: 50%;
      border: 1px dashed #ffc13b;
      height: 87.5%;
      color: #433e3f;
    }

    #timeline-divider .timeline-traveller {
      position: sticky;
      top: 95px;
      z-index: 2;
    }

    #timeline-divider i {
      transform: rotate(90deg);
      margin-top: -35px;
      display: block;
      color: #2857a4;
    }

    #timeline-divider1 {
      position: absolute;
      width: 0;
      top: 10%;
      left: 50%;
      border: 1px dashed black;
      height: 67.5%;
      color: #433e3f;
    }

    #timeline-divider1 .timeline-traveller1 {
      position: sticky;
      top: 95px;
      z-index: 2;
    }

    #timeline-divider1 i {
      transform: rotate(90deg);
      margin-top: -35px;
      display: block;
      color: black;
    }

    #timeline-divider2 {
      position: absolute;
      width: 0;
      top: 10%;
      left: 50%;
      border: 1px dashed #ffc13b;
      height: 67.5%;
      color: #433e3f;
    }

    #timeline-divider2 .timeline-traveller1 {
      position: sticky;
      top: 95px;
      z-index: 2;
    }

    #timeline-divider2 i {
      transform: rotate(90deg);
      margin-top: -35px;
      display: block;
      color: #2857a4;
    }

    @media only screen and (max-width: 930px) {
      .timeline-box:nth-child(2n) {
        left: 5.2%;
      }
      #timeline-divider {
        left: -2%;
      }
      .timeline-box:nth-child(2n + 1)::after {
        left: -8.6%;
      }
      .timeline-box {
        width: 90%;
      }
      #timeline-divider1 {
        left: -2%;
      }
    }

    .experience-designation {
      font-size: 1.4rem;
    }

    .experience-company-name {
      margin: 5px 0 0;
      color: #eb822d;
      font-weight: 400;
      font-size: 1.2rem;
    }

    .experience-duration {
      font-weight: 100;
      color: #eb822d;
      font-size: 1rem;
    }

    .experience-description {
      font-size: 14px;
      padding: 2px;
      color: grey;
      line-height: 20px;
    }

    .experience2-designation {
      font-size: 1.4rem;
    }

    .experience2-company-name {
      margin: 5px 0 0;
      color: #eb822d;
      font-weight: 400;
      font-size: 1.2rem;
    }

    .experience2-duration {
      font-weight: 100;
      color: #eb822d;
      font-size: 1rem;
    }

    .experience2-description {
      font-size: 14px;
      padding: 2px;
      color: black;
      line-height: 20px;
    }

    .text-align-justify {
      text-align: justify;
    }

    #portfolio-container {
      box-sizing: border-box;
      display: flex;
      flex-wrap: wrap;
      padding: 0 50px;
      margin-bottom: 20px;
      justify-content: space-around;
    }

    .portfolio-image-container {
      max-width: 350px;
      overflow: hidden;
      margin: 30px;
      background-size: cover;
      background-repeat: no-repeat;
      position: relative;
      cursor: pointer;
    }

    .portfolio-image-container img {
      width: 100%;
      height: 100%;
    }

    .portfolio-details {
      transition: all 0.5s ease-in-out;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      color: transparent;
      text-align: center;
      padding: 10px;
    }

    .portfolio-image-container:hover {
      box-shadow: 0 0 20px #74adc8;
    }

    .portfolio-image-container:hover .portfolio-details {
      background-color: #80808078;
      color: white;
    }

    #contact {
      background-color: #0abcf9;
      background-image: url(https://wallpaperaccess.com/full/1720179.jpg);
      color: white;
      padding-bottom: 40px;
    }

    #contact h1,
    #contact h1 span {
      color: white;
    }

    #contact-form {
      margin-left: 20%;
    }

    #contact-container {
      display: flex;
    }

    #my-details-container {
      width: 35%;
      margin-left: 6%;
    }

    #my-details-container h3 {
      color: white;
      font-weight: 550;
      font-size: 1.2rem;
    }

    #contact-form-container {
      width: 50%;
    }

    #my-details-container p {
      color: #d9dcdd;
      font-size: 0.9rem;
    }

    .my-details-info-container {
      margin-bottom: 20px;
      color: #d9dcdd;
      font-size: 1rem;
    }

    .my-details-info-container span {
      margin-left: 0.4rem;
    }

    .my-details-info-container i {
      color: white;
    }

    .my-details-icon {
      width: 1rem;
      height: 1rem;
      vertical-align: bottom;
      margin-right: 0.5rem;
    }

    #contact-form input,
    textarea {
      max-width: 90%;
      margin: 15px;
      padding: 4px 10px;
      border: 0px solid transparent;
      line-height: 1.6;
      border-bottom: 2px solid white;
      color: #d9dcdd;
      background: transparent;
      width: 90%;
      font-size: 1.05rem;
    }

    #contact-form button[type="submit"] {
      background: transparent;
      font-size: 0.95rem;
      border: 2px solid white;
      margin-top: 5%;
      margin-left: 35%;
      border-radius: 2px;
      color: white;
      font-family: sans-serif;
      font-weight: 700;
      letter-spacing: 0.046875em;
      line-height: 1;
      padding: 0.8em 0.8em 0.78em;
      text-transform: uppercase;
    }

    #contact-form button:hover {
      background: white;
      color: #13386fe0;
    }

    #contact .social-icons li a i {
      font-size: 1.2rem;
      margin: 40px 10px 10px;
      padding: 10px 14px 20px 10px;
    }

    input:focus,
    select:focus,
    textarea:focus,
    button:focus {
      outline: none;
    }

    .m0 {
      margin: 0;
    }

    .mb75px {
      margin-bottom: 75px;
    }

    .mb50px {
      margin-bottom: 50px;
    }

    .text-highlight {
      color: #2857a4;
      font-weight: 600;
    }

    .m-yellow {
      color: #ffc13b;
    }
    .m-black {
      color: black;
    }

    .m-gray {
      color: rgb(97, 96, 96);
    }
    .m-silver {
      color: silver;
    }

    .m-darkgray {
      color: rgb(65, 65, 66);
    }

    .mb-blue {
      background-color: #2857a4;
    }

    .mb-orange {
      background-color: #ec4d1c;
    }

    .mb-teal {
      background-color: #0b8176;
    }

    .mb-light-purple {
      background-color: #93738c;
    }

    .mb-react-color {
      background-color: #cc00cc;
    }

    .mb-css-color {
      background-color: #ffc300;
    }

    .mb-data-structures {
      background-color: #cc00cc;
    }

    .mb-firebase {
      background-color: #ffc300;
